#!/bin/bash

# Add nginx user if it doesn't exist
if ! id -u nginx >/dev/null 2>&1; then
    useradd -M nginx
fi

# Specify nginx configuration file path
config_file="/etc/nginx/nginx.conf"

# Backup existing configuration file if it exists
if [ -f "$config_file" ]; then
    cp "$config_file" "$config_file.bak"
fi

# Generate nginx configuration file content
cat > "$config_file" <<EOF
user nginx;
worker_processes auto;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    access_log off;
    error_log /var/log/nginx/error.log warn;

    server {
        listen 8080;
        listen [::]:8080;

        location / {
            # Modify this to point to my website's root directory
            root /path/to/your/website;
            index index.html index.htm;
        }
    }
}
EOF

# Restart nginx to apply changes
service nginx restart
